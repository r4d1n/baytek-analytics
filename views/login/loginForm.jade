script.template#loginForm(type="text/html")
	h2.form-signin-heading portal de acesso
	.login-wrap#validate
		#notification-wrapper
		input.form-control#input-username(type="text", placeholder="User ID")
		input.form-control#input-password(type="password", placeholder="Password")
		label.checkbox
			// input.form-control(type="checkbox", value="remember-me")
			// |  lembre-me
		button.btn.btn-lg.btn-login.btn-block#login-btn Entrar
		span
			a(data-toggle="modal", href="#forgotModal") Esqueceu-se da Password?	
		
	// Modal start
	#forgotModal.modal.fade(aria-hidden="true", aria-labelledby="forgotModalLabel", role"dialog", tabindex="-1")
		.modal-dialog
			.modal-content
				.modal-header
					button.close(type="button", data-dismiss="modal", aria-hidden="true") &times;
					h4.modal-title Esqueceu-se da Password ?
				.modal-body
					p Insira o seu e-mail abaixo para fazer reset a sua password.
					input.form-control.placeholder-no-fix(type="text", name="email", placeholder="Email", autocomplete="off")
				.modal-footer
					button.btn.btn-default(data-dismiss="modal", type="button") Cancelar
					button.btn.btn-success(type="button") Enviar
	// Modal end
